<div>Patient Profile</div>
<br>
<%= "First Name:" %>
<%= @patient.first_name %>
<br>
<%= "Last Name:" %>
<%= @patient.last_name %>
<br>
<%= "DOB:" %>
<%= @patient.date_of_birth %>
<br>
<%= "Description:" %>
<%= @patient.description %>
<br>
<%= "Gender:" %>
<%= @patient.gender %>
<br>
<%= "Blood Type:" %>
<%= @patient.blood_type %>
<br>
<br>
<br>
<div>Patient's Doctor(s)</div>
<br>
<% @doctors.each do |doctor| %>
	<%= "Dr." %>
	<%= link_to doctor.name, doctor_path(@doctor) %>

	<br>
<% end %>
<br>
<br>
<div>Patient's Medications</div>
<br>
<% @medications.each do |medication| %>
	<%= medication.name %>
	<%= medication.dosage %>
<br>
<% end %>
<br>
<br>
<%= link_to "Home", root_path %>
	<%= link_to "Edit Patient", edit_patient_path(@patient) %>
	<%= link_to "Delete Patient", patient_path(@patient), method: :delete %>
